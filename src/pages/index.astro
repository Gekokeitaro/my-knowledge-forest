---
import {
  getCollection,
  getEntry,
  render,
  type CollectionEntry,
} from 'astro:content';
import CardList from '../components/CardList.astro';
import NoteHeader from '../components/NoteHeader.astro';
import RandomNoteButton from '../components/RandomNoteButton.astro';
import Layout from '../layouts/Layout.astro';

const noteList = await getCollection('notes');

const welcomeNote = (await getEntry(
  'notes',
  'bienvenide-al-bosque-de-conocimientos'
)) as CollectionEntry<'notes'>;
const { tags, created, modified, title } = welcomeNote.data;
const { Content } = await render(welcomeNote);
---

<Layout>
  <div class="grid gap-4 h-full w-full">
    <div class="h-full flex flex-col border-4">
      <NoteHeader headerInfo={{ tags, created, modified, title }} />
      <div class="flex flex-col gap-4 p-4 w-full">
        <div class="w-full">
          <Content />
        </div>
        <div class="flex place-self-center w-56">
          <RandomNoteButton noteList={noteList} />
        </div>
        <div class="flex items-center gap-4">
          <hr class="flex-1" />
          <h2 class="text-xl font-bold">PERSONAL CANON</h2>
          <hr class="flex-1" />
        </div>
        <div class="flex flex-wrap gap-4 justify-center place-items-center">
          <CardList />
        </div>
      </div>
    </div>
  </div>
</Layout>
